<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyLocalStores</title>
    <style>
        li {
            display: inline;
            margin: 20px;
            background-color: white;
            border: 1px solid black;
            border-radius: 10px;
            padding: 5px;
            height: 20px;
        }
        
        nav {
            background-color: cornflowerblue;
            padding: 5px;
            border: 1px solid black;
            border-radius: 10px;
        }
        
        .store {
            text-align: center;
            display: inline-block;
            border: 1px solid black;
            margin: 10px;
            width: 250px;
            height: 300px;
        }
        
        img {
            width: 200px;
            height: 200px;
        }
        
        .block {
            background-color: antiquewhite;
            height: 100vh;
        }
    </style>
</head>

<body>
    <div class="block">
        <nav>
            <ul>
                <li id="logo">
                    <a href="/">MyLocalStores</a>
                </li>
                <li>
                    <a href="/addshop">AddShop</a>
                </li>
            </ul>
        </nav>
        <div class="stores">
            <% stores.forEach(function(store) { %>
                <a href="/shop/:<%= store.shopimg %>">
                    <div class="store">
                        <h2>
                            <%= store.shopname %>
                        </h2>
                        <hr>
                        <img src="./uploads/<%= store.shopimg %>" alt="shop">
                    </div>
                </a>
                <% }); %>
        </div>
    </div>
</body>

</html>